<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>AI Powered Job Role Recommendation</display-name>

	<!-- Welcome Page Configuration -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Register Servlet -->
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.jobai.controller.RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

	<!-- Login Servlet -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.jobai.controller.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Logout Servlet -->
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.jobai.controller.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<!-- Skill Servlet -->
	<servlet>
		<servlet-name>SkillServlet</servlet-name>
		<servlet-class>com.jobai.controller.SkillServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SkillServlet</servlet-name>
		<url-pattern>/skill</url-pattern>
	</servlet-mapping>

	<!-- History Servlet -->
	<servlet>
		<servlet-name>HistoryServlet</servlet-name>
		<servlet-class>com.jobai.controller.HistoryServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>HistoryServlet</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>

	<!-- Resume Upload Servlet -->
	<servlet>
		<servlet-name>ResumeUploadServlet</servlet-name>
		<servlet-class>com.jobai.controller.ResumeUploadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ResumeUploadServlet</servlet-name>
		<url-pattern>/resume-upload</url-pattern>
	</servlet-mapping>


</web-app>
